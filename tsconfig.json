{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "lib": [
      "ES2020"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules",
    "bin"
  ]
}
